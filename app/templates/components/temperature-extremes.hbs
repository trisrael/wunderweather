  <span>{{title}}</span>
  <div class="Overview font-size-mega">

    <div class="flexrow">
      {{#if comparingTemperature}}
        <div class="pad-xs-5 font-600">
          {{or comparingTemperatureLabel "Current"}} {{liquid-bind comparingTemperature.fahrenheight use="toDown"}}°F
        </div>
      {{/if}}
      <div class="pad-xs-5 Overview-high bg-red-200">
        {{liquid-bind (get (find-extreme-hour temperatureHours 'high') "temp.fahrenheight") use="toDown"}}°F
      </div>
      <div class="pad-xs-5 Overview-low bg-blue-200">
        {{liquid-bind (get (find-extreme-hour temperatureHours 'low') "temp.fahrenheight") use="toDown"}}°F
      </div>
    </div>
  </div>
